<!--pages/gcindex/gcindex.wxml-->
<import src="../../components/tabBar/tabBar.wxml"/>

<view class="page" wx:if="{{showPage}}">
    <view class="banner-container">
        <swiper class="banner-swiper" indicator-dots="{{indicatorDots}}"
                autoplay="{{true}}" indicator-color="{{indicatorColor}}" indicator-dots="{{true}}" indicator-active-color="{{dotActiveColor}}" interval="{{interval}}" duration="{{duration}}" circular="{{true}}">
            <block wx:for="{{bannerList}}" wx:key="key">
                <swiper-item class="banner-item">
                    <image src="{{item.img_url}}" data-link="{{item.link_url}}" class="slide-image" bindtap="bannerGo" />
                </swiper-item>
            </block>
        </swiper>
    </view>
    <view class="category-container">
        <view class="flex-space-cont category-f1">
            <view wx:for="{{categoryList}}" wx:if="{{index<3}}" wx:key="key"  class="cate-s-item" hover-class="list-hover" data-id="{{item.id}}" data-title="{{item.name}}" bindtap="goCateDetail">
                <image src="{{item.icon_url}}" class="category-icon" />
                <view>{{item.name}}</view>
            </view>
        </view>
        <view class="flex-space-cont category-f2">
            <view class="category-f2-cont category-f2-left">
                <view class="flex-space-cont">
                    <view class="cate-s-item" wx:for="{{categoryList}}" wx:if="{{index>2 && index<5}}" wx:key="key" data-id="{{item.id}}" hover-class="list-hover" data-title="{{item.name}}" bindtap="goCateDetail">
                        <image src="{{item.icon_url}}" class="category-icon" />
                        <view>{{item.name}}</view>
                    </view>
                </view>
                <view class="flex-space-cont category-f2-f2">
                    <view class="cate-s-item" hover-class="list-hover" wx:for="{{categoryList}}" wx:if="{{index>4}}" wx:key="key" data-id="{{item.id}}" data-title="{{item.name}}" bindtap="goCateDetail">
                        <image src="{{item.icon_url}}" class="category-icon" />
                        <view>{{item.name}}</view>
                    </view>
                </view>
            </view>
            <view class="cate-s-item category-f2-cont" hover-class="list-hover" bindtap="goRank">
                <image class="rank-big-icon" src="../../images/rank.png"/>
                <view>进榜单</view>
                <view>做网红</view>
            </view>
        </view>
    </view>
    <view class="topic-container">
        <view class="topic-head">话题精选</view>
        <view class="topic-list-group">
            <view class="topic-list-item" style="background: url('{{item.bg_url}}') no-repeat;background-size: 100% 100%;" wx:for="{{topicList}}" wx:key="key">
                <view class="topic-info-cont">
                    <view class="topic-title">{{item.title}}</view>
                    <view class="flex-space-cont topic-list-botom">
                        <view>#{{item.category_name}}</view>
                        <view class="flex-space-cont hot-cont">
                            <view>{{item.hots}}</view>
                            <image src="../../images/white_hot.png" class="hot-icon" />
                        </view>
                    </view>
                </view>
            </view>
        </view>
    </view>
</view>

<dialog-wxml dialog-show="{{showDialog}}" bind:cancelDialog="cancelDialog" bind:confirmDialog="confirmDialog"></dialog-wxml>

<template is="tabBar" data="{{tabBar:bindData.tabBar,msgCount,voteUnreadCount,baseRedDot,commentTotal}}"/>

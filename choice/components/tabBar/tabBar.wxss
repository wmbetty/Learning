/* components/tabBar/tabBar.wxss */
.icon{
    width:42rpx;
    height: 42rpx;
  }
  .tabBar{
    width:100%;
    position: fixed;
    z-index: 10;
    /* float: left; */
    bottom:0;
    padding:10rpx;
    margin-left:-4rpx;
    background:#343434;
    font-size:20rpx;
    color:#888;
    box-shadow: 6rpx 6rpx 6rpx 6rpx #aaa;
  }
  
   .tabBar-item{
    float:left;
    width:25%;
    text-align: center;
    overflow: hidden;
  }
  .tabBar-item:nth-child(3){
      display: flex;justify-content: center;align-items: center;
  }
  .tabBar-item:nth-child(3) image{
      width: 112rpx;height: 60rpx;margin-top: 12rpx;
  }
  /*当前字体颜色*/
  .tabBartext{
    color:#E74C49;
  }
  .msg-box{
    position: relative;
  }
  .msg-red-dot{
    position: absolute;top:0;right: 68rpx;
    width: 20rpx;height: 20rpx;border-radius: 50%;background: #E74C49;
  }
<!--components/tabBar/tabBar.wxml-->
<template name="tabBar">
    <view class="tabBar">
    <block wx:for="{{tabBar}}" wx:for-item="item" wx:key="tabBar">
        <view class="tabBar-item">
            <navigator open-type="redirect" url="{{item.pagePath}}" wx:if="{{index*1 !== 2}}">
                <view class="{{index*1===1?'msg-box':''}}">
                    <image class="icon" src='{{item.iconPath}}' />
                    <view wx:if="{{index*1===1 && msgCount}}" class="msg-red-dot"></view>
                </view>
                <view class="{{item.current== 1 ? 'tabBartext' :''}}">{{item.text}}</view>
            </navigator>
            <navigator open-type="navigate" url="{{item.pagePath}}" wx:if="{{index*1 === 2}}">
                <image bindtap="goPublish" class="icon" src='{{item.iconPath}}'></image>
            </navigator> 
        </view>
    </block>
    </view>
</template>

<!--components/dialog/dialog.wxml-->
<view class="user-dialog-mask" wx:if="{{dialogShow}}">
    <view class="user-dialog-content">
        <view class="user-dialog-title">授权</view>
        <view class="user-dialog-foot">
            <view class="user-dialog-btn" catchtap="cancelDialog">取消</view>
            <button class="user-dialog-btn user-dialog-confirm" open-type="getUserInfo" bindgetuserinfo="confirmDialog">确认</button>
        </view>
    </view>
</view>

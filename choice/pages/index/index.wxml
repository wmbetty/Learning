<view>
    <view class="title-box">
        <textarea class="{{showTextarea?'textarea-has-text':'title-textarea'}}" data-direct="title" bindinput="titlePut" bindfocus="textFocus" placeholder-class="{{showTextarea?'text-holder-white':'text-holder'}}" placeholder="点击输入标题" />
        <!-- <textarea wx:if="{{}}" focus="true" class="textarea-has-text"></textarea> -->
    </view>
    <view class="pub-cont">
        <view class="pub-cont-box">
            <textarea class="{{showLeft?'cont-textarea':'cont-holder'}}" data-direct="left" bindinput="titlePut" bindfocus="contFocus" value="{{leftHolder}}" cursor-spacing='180'/>
        </view>
        <view class="pub-cont-box">
            <textarea class="{{showRight?'cont-textarea':'cont-holder'}}" data-direct="right" bindinput="titlePut" bindfocus="contFocus" value="{{rightHolder}}" cursor-spacing='180'/>
        </view>
    </view>
    <view class="{{isPublish?'publish-btn publish-btn-active':'publish-btn'}}" bindtap="goPublish">发布</view>
</view>
<view class="gc-toast" wx:if="{{showToast}}">
    <view class="toast-cont">
        <image src="" class="smile-icon" />
        <image src="" class="score-icon" />
    </view>
    <view class="toast-info">发布成功</view>
</view>

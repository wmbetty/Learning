<!--pages/main/main.wxml-->
<import src="../../components/tabBar/tabBar.wxml"/>
<view class="main-page">
    <swiper indicator-dots="{{indicatorDots}}"
            autoplay="{{autoplay}}" current="{{currentIndex}}" interval="{{interval}}" duration="{{duration}}" vertical="true" style="height:{{viewHeight*2}}rpx;">
        <block wx:for="{{chooseData}}" wx:key="index">
            <swiper-item>
                <view class="main-container">
                    <view class="main-cont">
                        <view class="main-head">
                            <view class="left-item">
                                <view class="avatar-box" catchtap="gotoOthers">
                                    <image src="" class="m-avatar" catchtap="gotoOthers"></image>
                                </view>
                                <!-- <view class="user-infos">
                                    <view class="infos-head">哈哈哈</view>
                                    <view class="{{item.user.gender*1===1?'gender-box gender-boy':'gender-box gender-girl'}}"></view>
                                </view> -->
                            </view>
                            <view class="right-item">
                                <view class="r-share-btn" bindtap="goShare"></view>
                            </view>
                        </view>
                        <view class="main-body">
                            <view class="body-title">{{item.question}}</view>
                            <view class="main-totals">
                                <text class="hot-icon"></text>
                                <text>{{item.hots}}</text>
                            </view>
                        </view>
                        <view class="content-box">
                            <view class="vote-box" catchtap="goVote" data-direct="left" data-index="{{index}}" data-item="{{item}}">
                                <view class="vote-cont">{{item.option1}}</view>
                                <view class="cont-mask" wx:if="{{item.showMask}}">
                                    <view class="{{item.choose_left?'vote-selected':''}}">{{item.choose1}}%</view>
                                </view>
                            </view>
                            <view class="vote-box" catchtap="goVote" data-item="{{item}}" data-index="{{index}}" data-direct="right">
                                <view class="vote-cont">{{item.option2}}</view>
                                <view class="cont-mask" wx:if="{{item.showMask}}">
                                    <view class="{{item.choose_right?'vote-selected':''}}">{{item.choose2}}%</view>
                                </view>
                            </view>
                        </view>
                    </view>
                </view>
                <view class="up-text-box">
                    <text>滑动切换</text>
                    <text class="up-icon"></text>
                </view>
            </swiper-item>
        </block>

    </swiper>


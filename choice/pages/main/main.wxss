/* pages/main/main.wxss */
.main-page{
    background: #fff;
}
.main-container{
    border:1px solid #ccc;padding:0 8rpx 18rpx;margin:70rpx 8rpx 8rpx;border-radius:6px;
}
.main-head{
    display: flex;justify-content: space-between;padding: 26rpx 12rpx;font-size: 24rpx;
}
.left-item{width: 80%;display: flex;}
.avatar-box{
    width: 100rpx;height: 100rpx;border-radius: 50%;margin-right: 30rpx;
    background: #777;
}
.user-infos{
    padding-top: 12rpx;
}
.infos-head{margin-bottom: 14rpx;}
.main-body{
    padding: 140rpx 0 38rpx;text-align: center;
    background: #eee;
}
.body-title{
    font-size: 40rpx;color: #000;font-weight: 600;margin-bottom: 120rpx;
}
.main-totals{
    width: 180rpx;border-radius: 30rpx;margin: 0 auto;font-size: 26rpx;padding: 8rpx 10rpx;
    background: #999;
}
.content-box{
    display: flex;justify-content: space-between;
    background: #ddd;
}
.left-box{width: 50%;height: 360rpx;background:#fff;position: relative;}
.right-box{width: 49%;height: 360rpx;background: #888;position: relative;}
.cont-mask{
    position: absolute;left: 0;top:0;width: 100%;height: 100%;background: rgba(0,0,0, 0.4);color: #fff;
    text-align: center;font-size: 80rpx;font-weight: bold;display: flex;justify-content: center;align-items: center;
}
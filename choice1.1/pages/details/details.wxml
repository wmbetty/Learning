                <view class="main-totals">
                    <text class="hot-icon"></text>
                    <text>{{details.hots}}</text>
                </view>
                <view class="percent-text dark-red-font" wx:if="{{ismyVoted || isMy}}">{{details.choose2_per || 0}}%</view>
